@using Blog.Model.ViewModels
@model EditRolesViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<p class="text-success">@ViewBag.StatusMessage</p>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>User</h4>
        <hr />
        <div class="form-group">
            <label>User Roles</label>
            @foreach (UserIdentityRoleViewModel item in Model.UserRoles)
            {
                <ul>
                    <li>
                        @item.Name
                        <ul>
                            @foreach (var p in item.Permissions)
                            {
                                <li>@p.Description</li>
                            }
                        </ul>
                    </li>
                </ul>
            }
            @Html.HiddenFor(m => m.UserId)
        </div>

        <div class="form-group">
            <label for="allRoles">All roles</label>
            <div class="edit-field">
                @Html.DropDownListFor(m => m.SelectedRoleId, Model.Roles, "", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label for="allRoles">All permissions</label>
            <div class="edit-field">
                @Html.DropDownListFor(m => m.SelectedPermissionId, Model.Permissions, "", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-lg" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

