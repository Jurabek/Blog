@using Blog.Model.ViewModels
@model EditRolesViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>User</h4>
        <hr />
        <div class="form-group">
            <label>User Roles</label>
            @foreach (UserIdentityRoleViewModel item in Model.UserRoles)
            {
                <ul>
                    <li>
                        @item.Name
                        <ul>
                            @foreach (var p in item.Permissions)
                            {
                                <li>@p.Description</li>
                            }
                        </ul>
                    </li>
                </ul>
            }
            @Html.HiddenFor(m => m.UserId);
        </div>

        <div class="form-group">
            <label for="allRoles">All roles</label>
            @Html.DropDownListFor(m => m.SelectedRoleId, Model.Roles, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@Scripts.Render("~/bundles/jquery")
<script type="text/javascript">
    $("#SelectedRoleId").on("change", function () {
        console.log($("#SelectedRoleId").val());
    });
</script>