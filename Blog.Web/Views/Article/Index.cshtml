@model IEnumerable<Blog.Model.ViewModels.ArticleViewModel>
@{
    ViewBag.Title = "Blogs";
}

<h1 class="page-header">
    @ViewBag.Title
</h1>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            @foreach (var blog in Model)
            {
                <p class="text-muted">
                    <span class="glyphicon glyphicon-time"></span>
                    @blog.DateTime
                    <span class="label label-info"> by @blog.Author.UserName</span>
                </p>

                <h3>
                    @blog.Title
                </h3> 
                    <img class="img-responsive" src="@Url.Content(blog.Image)" alt="">
                <br />
                <p>@blog.ShortBody</p>

                    <a class="btn btn-primary" href="@Url.Action("Details", "Article", new { id = blog.Id })">Read More <span class="glyphicon glyphicon-chevron-right"></span></a>
                    <hr>
                    <br />
            }

            <!-- Pager -->
            <ul class="pager">
                <li class="previous">
                    <a href="#">&larr; Older</a>
                </li>
                <li class="next">
                    <a href="#">Newer &rarr;</a>
                </li>
            </ul>
        </div>

        <!-- Blog Sidebar Widgets Column -->
        <div class="col-md-4">
            <!-- Blog Search Well -->
            <div class="well">
                <h4>Blog Search</h4>
                <div class="input-group">
                    <input type="text" class="form-control">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>
                </div>
                <!-- /.input-group -->
            </div>
        </div>
    </div>
</div>

